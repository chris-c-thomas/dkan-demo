<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="weitzman/drupal-test-traits">
  <description>PHP CodeSniffer configuration for Drupal Test Traits.</description>
  <file>./src</file>
  <file>./tests</file>
  <rule ref="PSR12"></rule>
  <rule ref="PSR1.Files.SideEffects.FoundWithSymbols">
    <!-- This file by definition has side effects and declares symbols. -->
    <exclude-pattern>./src/bootstrap.php</exclude-pattern>
  </rule>

  <arg name="warning-severity" value="0"/>
  <arg value="s" />
</ruleset>
